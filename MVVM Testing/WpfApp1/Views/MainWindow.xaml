<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
		xmlns:vm="clr-namespace:WpfApp1.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" 
		Height="450" Width="800">
	<Window.DataContext>
		<vm:MainWindowViewModel/>
	</Window.DataContext>
	<Grid>
		<TextBox VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Margin="30"
				 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"></TextBox>
		<TextBlock VerticalAlignment="Top" HorizontalAlignment="Left"
				   Text="{Binding CurrentTime, ConverterCulture=ru-RU}"/>
	</Grid>
</Window>
