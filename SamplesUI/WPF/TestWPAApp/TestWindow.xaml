        xmlns:local="clr-namespace:TestWPAApp"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid>
		<Grid.Resources>
			<Style TargetType="CheckBox">
				<Setter Property="Foreground" Value="Red"/>
			</Style>
			
		</Grid.Resources>

		<CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="494,99,0,0" VerticalAlignment="Top"/>
		<CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="462,224,0,0" VerticalAlignment="Top"/>
		<CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="514,258,0,0" VerticalAlignment="Top"/>
		<Button Content="Button" HorizontalAlignment="Left" Margin="105,63,0,0" 
				VerticalAlignment="Top" Width="75"
				Style="{StaticResource RedButtonsStyle}"/>

	</Grid>
</Window>
